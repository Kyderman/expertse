
<%= simple_form_for @friendship, :class => "form-control" do |f| %>
      <%= f.error_notification %>
   

  <div class="form-inputs">
    <%= f.association :expert, :collection => Expert.all, :label_method => :fullname, :value_method => :id %>
    
    <%= f.association :friend, :collection => Expert.all, :label_method => :fullname, :value_method => :id %>
    
    
  </div>

  <div class="form-actions">
    <%= f.button :submit, :class => "btn btn-success pull-right" %>
  
<% end %>

