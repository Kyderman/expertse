
<div class="jumbotron">
	<div class="row">
		<div class="col-md-6">
			<h1>Tags</h1>
		
			<%= link_to 'Create new', new_tag_path, class: "btn btn-primary btn-lg" %>
		</div>
		
	</div>
		
	
		
</div>


<div class="row">
	<div class="col-md-12">
	<div class="table-responsive">
		<table class="table table-bordered">
		  <thead>
		    <tr>
		      <th>Expert</th>
		      <th>Tag</th>
		      <th></th>
		      <th></th>
		      <th></th>
		    </tr>
		  </thead>
		
		  <tbody>
		    <% @tags.each do |tag| %>
		    <%@cur_expert = Expert.find(tag.expert_id)%>
		    <%@tag_text = tag.tag%>
		      <tr>
		        <td><%= link_to @cur_expert.fullname, @cur_expert%></td>
		        <td><%=@tag_text%></td>
		        <td><%= link_to 'Show', tag, class: 'btn-xs btn-success' %></td>
		        <td><%= link_to 'Edit', edit_tag_path(tag), class: 'btn-xs btn-warning' %></td>
		        <td><%= link_to 'Remove', tag, method: :delete, data: { confirm: 'Are you sure?' },class: 'btn-xs btn-danger' %></td>
		      </tr>
		    <% end %>
		  </tbody>
		</table>
	</div>
	</div>
</div>


