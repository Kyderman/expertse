

<% @expert = Expert.find(@tag.expert_id)%>


<% @tag_text = @tag.tag%>

<div class="jumbotron text-center">
	<div class="row">
	<div class="col-md-12">
		<h2>
		<%=link_to @expert.fullname, @expert%>
		<hr>
		<%=@tag_text%>
		</h2>
	</div>
	
	
	</div>
	<br>
	<div class="row">
	<div class="col-md-offset-4 col-md-4">
		
		<%= link_to 'Edit', edit_tag_path(@tag), :class => "btn btn-default btn-lg btn-block" %>	        	
	<%= link_to 'Delete', @tag, method: :delete, data: { confirm: 'Are you sure?' },class: 'btn btn-danger btn-lg btn-block' %>
	<%= link_to 'Back', tags_path, class: 'btn btn-warning btn-lg btn-block' %>
	</div>
	</div>
</div>
</div>
